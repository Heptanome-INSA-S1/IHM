<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:background="@color/black"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/userMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="125"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/imageButton"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/userMoney"
            android:layout_toEndOf="@+id/userMoney"
            android:layout_toRightOf="@+id/userMoney"
            android:adjustViewBounds="true"
            android:background="@color/black"
            android:layout_marginTop="4dp"
            android:tint="@color/colorFifth"
            app:srcCompat="@drawable/ic_local_play_black_24dp" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imageButton"
            android:layout_toRightOf="@+id/imageButton"
            android:background="@drawable/rounded_input"
            android:ems="10"
            android:textSize="12dp"
            android:layout_marginLeft="5dp"
            android:inputType="textPersonName"
            android:paddingLeft="35dp"
            android:hint="@string/search_placeholder" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/editText3"
            android:layout_alignStart="@+id/editText3"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/ic_search_black_24dp" />

    </RelativeLayout>
</LinearLayout>