<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.a4302.heptanome.fr.ihm.ChooseService">

    <include layout="@layout/search_menu"
        android:id="@+id/search_menu"/>
    <TextView
        android:id="@+id/propose_or_request_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Propose or Request"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_below="@id/search_menu"/>

    <include layout="@layout/filter_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="32dp"
        android:layout_below="@id/propose_or_request_text"/>

    <include layout="@layout/bottom_menu_bar"
        android:id="@+id/bottom_menu_bar"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>
