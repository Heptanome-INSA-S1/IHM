<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.a4302.heptanome.fr.ihm.FilterMenuActivity"
    android:weightSum="4"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginBottom="50dp">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/button_music"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:tint="@color/colorFifth"
            app:backgroundTint="@color/colorFlatPeterRiver"
            app:srcCompat="@drawable/ic_music_note_black_24dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/button_school"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:focusable="true"
            android:tint="@color/colorFifth"
            app:backgroundTint="@color/colorFlatPeterRiver"
            app:srcCompat="@drawable/ic_school_black_24dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/button_information"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:focusable="true"
            android:tint="@color/colorFifth"
            app:backgroundTint="@color/colorFlatPeterRiver"
            app:srcCompat="@drawable/ic_info_outline_black_24dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginBottom="50dp">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/button_sport"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:tint="@color/colorFifth"
            app:backgroundTint="@color/colorFlatPeterRiver"
            app:srcCompat="@drawable/ic_fitness_center_black_24dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/button_car"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:focusable="true"
            android:tint="@color/colorFifth"
            app:backgroundTint="@color/colorFlatPeterRiver"
            app:srcCompat="@drawable/ic_directions_car_black_24dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/button_bicycles"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:focusable="true"
            android:tint="@color/colorFifth"
            app:backgroundTint="@color/colorFlatPeterRiver"
            app:srcCompat="@drawable/ic_directions_bike_black_24dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginBottom="50dp">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/button_tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:tint="@color/colorFifth"
            app:backgroundTint="@color/colorFlatPeterRiver"
            app:srcCompat="@drawable/ic_build_black_24dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/button_palette"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:tint="@color/colorFifth"
            app:backgroundTint="@color/colorFlatPeterRiver"
            app:srcCompat="@drawable/ic_color_lens_black_24dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/button_drink"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:focusable="true"
            android:tint="@color/colorFifth"
            app:backgroundTint="@color/colorFlatPeterRiver"
            app:srcCompat="@drawable/ic_local_bar_black_24dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_weight="1">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/button_pet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:tint="@color/colorFifth"
            app:backgroundTint="@color/colorFlatPeterRiver"
            app:srcCompat="@drawable/ic_pets_black_24dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/button_removal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:tint="@color/colorFifth"
            app:backgroundTint="@color/colorFlatPeterRiver"
            app:srcCompat="@drawable/ic_archive_black_24dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/button_cleaning"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:focusable="true"
            android:tint="@color/colorFifth"
            app:backgroundTint="@color/colorFlatPeterRiver"
            app:srcCompat="@drawable/ic_local_laundry_service_black_24dp" />
    </RelativeLayout>

</LinearLayout>
